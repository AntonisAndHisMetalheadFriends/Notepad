<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Note Title"
                android:textColor="#000000"

                android:textSize="24sp" />

            <Button
                android:id="@+id/EditButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:drawableTop="@drawable/edit"
                android:padding="4dp"
                android:textColor="@color/com_facebook_likeview_text_color" />

            <CheckBox
                android:id="@+id/selelctedNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="49dp" />

            <TextView
                android:id="@+id/DateOfNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="42dp"
                android:text="Date Of Creation : " />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/DateOfNote"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/DateOfNote"
                android:text="Date" />

            <TextView
                android:id="@+id/KeywordsOfNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Date"
                android:layout_alignStart="@+id/textView"
                android:layout_marginStart="6dp"
                android:layout_marginTop="13dp"
                android:text="Keywords : " />

            <TextView
                android:id="@+id/Keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/KeywordsOfNote"
                android:layout_marginStart="47dp"
                android:layout_toEndOf="@+id/KeywordsOfNote"
                android:text="Keywords" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="26dp"
                android:layout_height="109dp"
                android:layout_below="@+id/EditButton"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-72dp"
                android:layout_marginEnd="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/DateOfNote"
                android:layout_alignBottom="@+id/EditButton"
                android:text="Location :" />

            <TextView
                android:id="@+id/Location_Text"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginStart="9dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="Location" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>